<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bankhui.sys.dao.TestCaseDao">

	<resultMap id="testCase" type="com.bankhui.sys.bean.TestCaseBean">
        <result property="id" column="id"/>
        <result property="caseNum" column="case_num"/>
        <result property="caseName" column="case_name"/>
        <result property="caseDetail" column="case_detail"/>
        <result property="createTime" column="create_time"/>
        <result property="startTime" column="start_time"/>
        <result property="endTime" column="end_time"/>
        <result property="results" column="results"/>
	</resultMap>
	<!-- 用于select查询公用抽取的列 -->
	<sql id="columns">
	    <![CDATA[
	   		 id,case_num,case_name,case_detail,create_time,start_time,end_time,results
	    ]]>
	</sql>
	<select id="findById" parameterType="int" resultMap="testCase">
   		 select 
	    	<include refid="columns" />
         from 
        	test_bankhui_h5 
         where 
        	id = #{id}
  	</select>
  	
	<select id="findAll" resultMap="testCase" >
	    	select 
		   		 <include refid="columns" />
	        from 
	        	test_bankhui_h5 
  	</select>
	
  	<insert id="insert"  parameterType="com.bankhui.sys.bean.TestCaseBean"
		keyProperty="id" useGeneratedKeys="true">
		INSERT INTO test_bankhui_h5(
			case_num,
			case_name,
			case_detail,
			create_time,
			start_time,
			end_time,
			results
		) VALUES (
			#{caseNum},
			#{caseName},
			#{caseDetail},
			#{createTime},
			#{startTime},
			#{endTime},
			#{results}
		)
		
		<selectKey resultType="int" keyProperty="id" order="AFTER">
			SELECT
			LAST_INSERT_ID() AS ID
		</selectKey>
	</insert>
	
	<update id="update" parameterType="com.bankhui.sys.bean.TestCaseBean" >
		update 
			test_bankhui_h5
		set
			case_num = #{caseNum},
			case_name = #{caseName},
			case_detail = #{caseDetail},
			create_time = #{createTime},
			start_time = #{startTime},
			end_time = #{endTime},
			results = #{results}
		where 
			id = #{id}		
	</update>
	
	<update id="updateAllStaust">
		update 
			test_bankhui_h5
		set
			start_time = '',
			end_time = '',
			results = ''
	</update>
	
	<delete id="deleteById" parameterType="int">
		delete from test_bankhui_h5 where id = #{id}
	</delete>
	
</mapper>
